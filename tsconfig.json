{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src/",     
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": ["_components/*"],
      "@/lib/*": ["_libs/*"],
      "@/services/*": ["_services/*"],
      "@/hooks/*": ["_hooks/*"], 
      "@/messages/*": ["messages/*"],
      "@/pages/*": ["[locale]/(pages)/*"],
      "@/styles/*": ["_styles/*"],
      "@/utils/*": ["_utils/*"],
      "@/types/*": ["_types/*"],
      "@/config/*": ["_config/*"],
      "@/i18n/*": ["i18n/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
