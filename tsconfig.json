{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src/",     
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/app/*": ["app/*"],
      "@/components/*": ["components/*"],
      "@/libs/*": ["libs/*"],
      "@/services/*": ["services/*"],
      "@/hooks/*": ["hooks/*"], 
      "@/messages/*": ["messages/*"],
      "@/v1/*": ["[locale]/(pages)/*"],
      "@/styles/*": ["styles/*"],
      "@/utils/*": ["utils/*"],
      "@/types/*": ["types/*"],
      "@/config/*": ["config/*"],
      "@/i18n/*": ["i18n/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
